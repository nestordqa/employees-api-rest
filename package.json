  "main": "index.js",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "nodemon -e ts,json --exec ts-node ./src/server.ts",
    "build": "tsc",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
